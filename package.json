{
  "name": "buildforce",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm -w apps/web run dev",
    "build": "npm -w apps/web run build",
    "lint": "npm -w apps/web run lint",
    "typecheck": "npm -w apps/web run typecheck",
    "check": "npm run lint && npm run typecheck && npm run build",
    "workflow:done": "npm run check && npm run prd:sync",
    "prd:sync": "node scripts/sync-prd.mjs",
    "milestone:1": "powershell -ExecutionPolicy Bypass -File .\\scripts\\milestone-1.ps1"
  }
}
